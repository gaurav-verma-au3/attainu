<body>

    <form>
        <div class="container" id="signup-box">
            <div class="row">
                <h1>Update</h1>
            </div>
            <div class="login-box">
                <div class="textbox">
                    <label>Full Name</label>
                    <i class="fas fa-user"></i>
                    <input type="text" placeholder="Full Name" value={{data.name}} name="name" maxlength="255"
                        required />
                </div>
                <div class="textbox">
                    <label>Email</label>
                    <i class="fas fa-envelope-open-text"></i>
                    <input type="email" placeholder="Email" name="email" value={{data.email}} required />
                </div>
                <div class="textbox">
                    <label>Mobile</label>
                    <i class="fas fa-envelope-open-text"></i>
                    <input type="text" placeholder="mobile" name="mobile" value={{data.mobile}} maxlength="10"
                        minlength="10" required />
                </div>
                <div class="textbox">
                    <label>Password</label>
                    <i class="fas fa-lock"></i>
                    <input id="password" type="password" placeholder="Password" name="password" required />
                </div>
                <div class="textbox">
                    <label>Confirm Password</label>
                    <i class="fas fa-key"></i>
                    <input id="confirmPassword" onkeyup="comp(event)" type="password" placeholder="confirm password"
                        name="confirm-password" required />
                    <div id="alertTool"></div>
                </div>
                <input type="checkbox" name="subscribe" id="subscribe">
                <label class="mt-3">subscribe to our new alerts</label>
                <button id="save" class="sub-btn btn btn-outline-success w-100">Update</button>
            </div>
        </div>
    </form>

</body>